{
  "name": "smartlisa",
  "version": "0.1.13",
  "description": "AI-powered planning system for Claude Code",
  "type": "module",
  "license": "MIT",
  "author": "klosowsk",
  "homepage": "https://smartlisa.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/klosowsk/lisa.git"
  },
  "bugs": {
    "url": "https://github.com/klosowsk/lisa/issues"
  },
  "keywords": [
    "claude",
    "claude-code",
    "anthropic",
    "ai",
    "ai-coding",
    "vibe-coding",
    "ai-assistant",
    "llm",
    "planning",
    "agile",
    "project-management",
    "roadmap",
    "milestones",
    "epics",
    "user-stories",
    "cli",
    "developer-tools",
    "productivity"
  ],
  "bin": {
    "lisa": "./dist/cli.js"
  },
  "files": [
    "dist",
    ".claude-plugin",
    "skills"
  ],
  "scripts": {
    "init:claude": "node scripts/init-claude.js",
    "lisa": "tsx src/adapters/cli/index.ts",
    "build": "node esbuild.config.js",
    "build:watch": "node esbuild.config.js --watch",
    "build:types": "tsc",
    "clean": "rm -rf dist coverage",
    "dev": "tsx --watch src/adapters/cli/index.ts",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "ci": "npm run typecheck && npm run lint && npm run test",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.17",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
